void __fastcall TForm6::Button1Click(TObject *Sender)
{
if((Edit1->Text.IsEmpty())  || (Edit2->Text.IsEmpty()) )
	ShowMessage("Nie podano ¿adnych wartosci!!") ;
  else{
	  int n, max, i;

	  String text= "";
	  n = StrToInt(Edit1->Text);
	  max = StrToInt(Edit2->Text);
	  if (n>max) {
	   ShowMessage("B³¹d: nie mo¿na wylosowaæ liczb bez powtórzeñ dla n > górnej granicy.");
	   }
	  else{
	  srand(time(0));
	  float a[n];
	  float tablica[n];
	  for (i = 0; i < n; i++) {

	  a[i] = rand()%max+1;
	  tablica[i]=a[i];
	  if (a[i] = tablica[i]) {

	  }

	  text += FloatToStr(a[i]) + ", ";

  }
  }
	Memo1->Text=text;
}
}
