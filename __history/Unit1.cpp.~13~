#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
int nr = 0;
int n, k; float p;

float warBezwgl(float nr) {
	if (nr < 0) {
			  return nr*(-1);
	} else return nr;
}


int bin(int n, float p) {

	int binomial = 0;

	for(int i=0; i<n; i++) {
		float u = (float) rand()/RAND_MAX;
		if (u < p) {
			binomial++;
		}
	}
	return binomial;
}

